[
  {
    "type": "function",
    "strict": true,
    "name": "file-read",
    "description": "Read file contents from the project directory. Provide a relative path from the project root.",
    "parameters": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "path": {
          "description": "Relative path from project root",
          "type": "string"
        },
        "encoding": {
          "description": "File encoding (defaults to utf-8 if null)",
          "anyOf": [
            {
              "type": "string",
              "enum": [
                "utf-8",
                "utf8",
                "base64",
                "binary"
              ]
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "path",
        "encoding"
      ],
      "additionalProperties": false
    }
  },
  {
    "type": "function",
    "strict": true,
    "name": "read-table-info",
    "description": "Read table structure and metadata information from the database. Retrieves column definitions, indexes, and constraints for a specified table. If schemaName or connectionName are not provided, uses the current schema and connection selected by the user.",
    "parameters": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "tableName": {
          "description": "Name of the database table",
          "type": "string"
        },
        "schemaName": {
          "description": "Schema name (uses current schema if not specified)",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "connectionName": {
          "description": "Connection name (uses current connection if not specified)",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "tableName",
        "schemaName",
        "connectionName"
      ],
      "additionalProperties": false
    }
  },
  {
    "type": "function",
    "strict": true,
    "name": "execute-query",
    "description": "Execute a SQL query against the database. Supports pagination, filtering, and sorting through queryOptions. If connectionName is not provided, uses the current connection selected by the user.",
    "parameters": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "query": {
          "description": "SQL query to execute",
          "type": "string"
        },
        "queryOptions": {
          "description": "Query execution options including pagination, filters, and sorting",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "page": {
                  "description": "Page number for pagination (1-based)",
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "pageSize": {
                  "description": "Number of rows per page for pagination",
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "filters": {
                  "description": "Array of filter conditions to apply",
                  "anyOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "description": "Unique identifier for the filter",
                            "type": "string"
                          },
                          "column": {
                            "description": "Column name to filter on",
                            "type": "string"
                          },
                          "operator": {
                            "description": "Filter operator (e.g., =, !=, >, <, LIKE, IN)",
                            "type": "string"
                          },
                          "value": {
                            "description": "Filter value",
                            "type": "string"
                          },
                          "type": {
                            "description": "Data type of the column",
                            "type": "string"
                          }
                        },
                        "required": [
                          "id",
                          "column",
                          "operator",
                          "value",
                          "type"
                        ],
                        "additionalProperties": false
                      }
                    },
                    {
                      "type": "null"
                    }
                  ]
                },
                "sort": {
                  "description": "Array of sort specifications",
                  "anyOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "description": "Unique identifier for the sort",
                            "type": "string"
                          },
                          "column": {
                            "description": "Column name to sort by",
                            "type": "string"
                          },
                          "direction": {
                            "description": "Sort direction",
                            "type": "string",
                            "enum": [
                              "asc",
                              "desc"
                            ]
                          },
                          "nulls": {
                            "description": "NULL values placement",
                            "type": "string",
                            "enum": [
                              "first",
                              "last"
                            ]
                          }
                        },
                        "required": [
                          "id",
                          "column",
                          "direction",
                          "nulls"
                        ],
                        "additionalProperties": false
                      }
                    },
                    {
                      "type": "null"
                    }
                  ]
                }
              },
              "required": [
                "page",
                "pageSize",
                "filters",
                "sort"
              ],
              "additionalProperties": false
            },
            {
              "type": "null"
            }
          ]
        },
        "connectionName": {
          "description": "Connection name (uses current connection if not specified)",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "query",
        "queryOptions",
        "connectionName"
      ],
      "additionalProperties": false
    }
  }
]